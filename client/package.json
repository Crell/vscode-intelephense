{
  "name": "vscode-intelephense-client",
  "displayName": "Intelephense",
  "description": "PHP Language Server",
  "author": "Ben Mewburn <ben@mewburn.id.au>",
  "license": "ISC",
  "version": "0.6.0",
  "publisher": "bmewburn",
  "engines": {
    "vscode": "^1.11.0"
  },
  "categories": [
    "Languages", "Linters","Other"
  ],
  "activationEvents": [
    "onLanguage:php"
  ],
  "keywords": [
    "php", 
    "intellisense",
    "autocompletion", 
    "language server", 
    "completion", 
    "signature",
    "symbols", 
    "diagnostics", 
    "definition"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "intelephense",
      "properties": {
        "intelephense.enableDebug": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging."
        },
        "intelephense.enableDiagnosticsProvider": {
          "type": "boolean",
          "default": true,
          "description": "Enable diagnostics."
        },
        "intelephense.enableCompletionProvider": {
          "type": "boolean",
          "default": true,
          "description": "Enable code completion."
        },
        "intelephense.enableSignatureHelpProvider": {
          "type": "boolean",
          "default": true,
          "description": "Enable signature help."
        },
        "intelephense.enableDefinitionProvider": {
          "type": "boolean",
          "default": true,
          "description": "Enable definition go to."
        },
        "intelephense.enableDocumentSymbolsProvider": {
          "type": "boolean",
          "default": true,
          "description": "Enable document symbol search."
        },
        "intelephense.enableWorkspaceSymbolsProvider": {
          "type": "boolean",
          "default": true,
          "description": "Enable workspace symbol search."
        },
        "intelephense.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VSCode and the intelephense service."
        }        
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "update-vscode": "node ./node_modules/vscode/bin/install",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.40",
    "@types/node": "^6.0.52",
    "typescript": "^2.2.1",
    "vscode": "^1.1.0"
  },
  "dependencies": {
    "vscode-languageclient": "^3.2.0"
  }
}
